@model Projeto_IHC.Entidades.Filme

@{
    ViewData["Title"] = "Adicionar Filme";
}

@section Styles {
<link rel="stylesheet" href="/css/AdicionarFilme.css" />
}

<nav id="caminhodepao" style="--bs-breadcrumb-divider: '>';padding:0!important;" aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/Admin/">Admin</a></li>
        <li class="breadcrumb-item"><a href="/Admin/ListaFilmes">Lista Filmes</a></li>
        <li class="breadcrumb-item active" aria-current="page">Adicionar Filme</li>
    </ol>
</nav>

<h1>Adicionar Filme</h1>

<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="AdicionarFilme">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="d-flex flex-sm-row flex-column w-75">
                <div class="form-group w-100 m-2 mb-2">
                    <label asp-for="Nome"></label>
                    <input asp-for="Nome" type="text" id="Nome" class="form-control" required />
                    <span id="Nome-sp" class="text-danger"></span>
                </div>
                <button type="button" class="btn btn-primary w-100 mt-4" id="nomeBtn">
                    Pesquisar
                </button>
                <button type="button" class="btn btn-primary w-100 mt-4" id="limparBtn">
                    Limpar Campos
                </button>
            </div>
            <div id="modal">
                <!-- Modal -->
                <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel"
                    aria-hidden="true">
                    <div class="modal-dialog modal-dialog-scrollable modal-xl">
                        <div class="modal-content bg-dark">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">Selecionar Filme</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"
                                    aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <div class="container" id="table">

                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="d-flex flex-sm-row flex-column">
                <div class="form-group w-100 m-2 mb-2">
                    <label>URL do Poster</label>
                    <input asp-for="URLPoster" type="url" class="form-control" id="urlp" required />
                    <span class="text-danger" id="URLPoster-sp"></span>
                </div>
                <div class="form-group w-100 m-2 mb-2">
                    <label>URL da Capa</label>
                    <input asp-for="URLCapa" type="url" class="form-control" id="urlc" required />
                    <span class="text-danger" id="URLCapa-sp"></span>
                </div>
            </div>
            <div class="form-group w-auto m-2 mb-2">
                <label>URL do Trailer</label>
                <input asp-for="URLTrailer" type="url" class="form-control" id="urlt" required />
                <span class="text-danger" id="URLTrailer-sp"></span>
            </div>
            <div class="d-flex flex-sm-row flex-column">
                <div class="form-group w-100 m-2 mb-2">
                    <label>Diretor</label>
                    <input asp-for="Diretor" type="text" class="form-control" id="dir" required />
                    <span class="text-danger" id="Diretor-sp"></span>
                </div>
                <div class="form-group w-100 m-2 mb-2">
                    <label>Ano</label>
                    <input asp-for="Ano" type="number" class="form-control" id="ano" required />
                    <span class="text-danger" id="Ano-sp"></span>
                </div>
            </div>
            <div class="form-group w-100 m-2 mb-2">
                <label>Opções</label>
                <div class="form-check form-check-inline">
                    <input asp-for="emBreve" class="form-check-input">
                    <label class="form-check-label">Em Breve</label>
                    <span class="text-danger" id="emBreve-sp"></span>
                </div>
                <div class="form-check form-check-inline">
                    <input asp-for="emCartaz" class="form-check-input">
                    <label class="form-check-label">Em Cartaz</label>
                    <span class="text-danger" id="emCartaz-sp"></span>
                </div>
            </div>
            <div class="d-flex flex-sm-row flex-column">
                <div class="form-group w-100 m-2 mb-2">
                    <label>Classificação Indicativa</label>
                    <select asp-for="Classificacao" class="form-control" id="inputGroupSelect01">
                        <option selected>Selecione uma Classificação</option>
                        <option value="Livre">Livre</option>
                        <option value="10">10 anos</option>
                        <option value="12">12 anos</option>
                        <option value="14">14 anos</option>
                        <option value="16">16 anos</option>
                        <option value="18">18 anos</option>
                    </select>
                </div>

                <div class="form-group w-100 m-2 mb-2">
                    <label>Duração</label>
                    <input asp-for="Duracao" type="text" class="form-control" id="dur" required />
                    <span class="text-danger" id="Duracao-sp"></span>
                </div>
            </div>
            <div class="form-group w-auto m-2 mb-2">
                <label>Resumo</label>
                <textarea asp-for="Resumo" class="form-control" id="res" required></textarea>
                <span class="text-danger" id="Resumo-sp"></span>
            </div>

            <button class="btn btn-primary" id="EnviarBtn">Adicionar</button>
        </form>
    </div>
</div>

@section Scripts {
<script src="~/js/TMDB_API.js"></script>
<script src="~/js/Validacao.js"></script>
}
