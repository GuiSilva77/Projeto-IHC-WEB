@{
    ViewData["Title"] = "Admin";
}

@section Styles {
<style>
    .card {
        border: 1px solid hsla(210, 4%, 80%, 0.418);
        background-color: rgb(20, 24, 28) !important;
    }

    .card-header {
        border-bottom: 1px solid hsla(210, 4%, 80%, 0.418);
    }

    .card-footer {
        border-top: 1px solid hsla(210, 4%, 80%, 0.418);
    }

    .btn {
        width: 100%;
        height: 3rem;
        border: 1px solid rgba(158, 162, 166, 0.418);
        background-color: rgb(20, 24, 28) !important;
        color: rgba(var(--bs-white-rgb), var(--bs-text-opacity)) !important;
        font-size: 1.2rem;
        font-weight: bold;
        border-radius: 0;
        margin-top: 1rem;
    }

    button:hover,
    button:focus {
        border-color: var(--color-secondary);
        box-shadow: none;
    }
</style>
}

<h1>Olá @ViewData["admin"]</h1>

<hr>
<div class="row">
    <div class="card bg-dark col-4 px-0 m-2">
        <div class="card-header">
            <h3>
                Sessões
            </h3>
        </div>
        <div class="card-body">
            Para acessar as informações sobre as sessões do site, clique no botão abaixo.
            <div class="d-flex justify-content-start">
                <a class="btn btn-primary" href="/admin/listasessoes">Sessões</a>
            </div>
        </div>
    </div>
    <div class="card bg-dark col-4 px-0 m-2">
        <div class="card-header">
            <h3>
                Filmes
            </h3>
        </div>
        <div class="card-body">
            Para acessar as informações sobre as Filmes do site, clique no botão abaixo.
            <div class="d-flex justify-content-start">
                <a class="btn btn-primary" href="/admin/listafilmes">Filmes</a>
            </div>
        </div>
    </div>
</div>
