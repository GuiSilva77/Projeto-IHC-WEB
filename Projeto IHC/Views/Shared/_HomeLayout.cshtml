                            <a class="nav-link active" aria-current="page" href="#embreve">Em Breve</a>
                        </li>
                    </ul>

                    <div class="nav-item text-white d-flex align-items-center justify-content-start">
                        <a class="btn btn-outline-light" href="Usuarios/Cadastrar">Cadastre-se</a>
                        <a class="ps-2" href="/Usuarios/Login">Fazer Login</a>
                        
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="bg-dark">
        @RenderBody()
