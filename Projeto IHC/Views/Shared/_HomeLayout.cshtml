                <a href="" class="nav-link f-link"><i class="fa-solid fa-mobile"></i> Celular: (16) 99999-9999</a>
                <a href="" class="nav-link f-link"><i class="fa-solid fa-phone"></i> Telefone: (16) 3333-3333</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://kit.fontawesome.com/0edd786e2e.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
