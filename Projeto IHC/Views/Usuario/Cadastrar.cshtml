@section Styles{
    <link rel="stylesheet" href="~/css/style/Login.css" />
}
<main class="bg-dark">
    <div class="container">
        <div class="card-header">
            <h3 class="card-title text-center text-white">Cadastro</h3>
        </div>
        <div class="card-body">
            <form method="post" action="/Usuarios/Login">
                <div class="d-flex flex-sm-row m-0 justify-content-sm-between flex-column m-sm-3">
                    <div class="form-group m-sm-0 m-3 mb-0">
                        <label for="" class="text-white">Nome</label>
                        <input type="text"
                               name="usuario"
                               id="Usuario"
                               class="form-control" />

                    </div>
                    <div class="form-group m-sm-0 m-3 mb-0">
                        <label for="" class="text-white">Sobrenome</label>
                        <input type="text"
                               name="usuario"
                               id="Usuario"
                               class="form-control" />
                    </div>
                </div>
                    <div class="form-group m-3">
                        <label for="" class="text-white">Email</label>
                        <input type="email"
                               name="senha"
                               id="Usuario"
                               class="form-control" />
                    </div>
                <div class="form-group m-3">
                    <label for="" class="text-white">Senha</label>
                    <input type="password"
                           name="senha"
                           id="Usuario"
                           class="form-control" />
                </div>
                <div class="form-group m-3">
                    <label for="" class="text-white">CPF</label>
                    <input type="number"
                           name="senha"
                           id="Usuario"
                           class="form-control" />
                </div>
                <button type="submit" class="btn btn-primary mt-0 m-3">
                    Entrar
                </button>
            </form>
        </div>
    </div>
</main>


