@{
    ViewData["Title"] = "Entrar";
}

@section Styles {
    <link rel="stylesheet" href="~/css/Entrar.css" />
}
<main class="bg-dark">
    <div class="container">
        <div class="card-header d-flex justify-content-center align-items-center"
             id="card-header">
            <img src="/img/capital.svg" class="login-logo" />
        </div>
        <div class="card-body d-flex flex-column">
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger">
                    <i class="fa-solid fa-info"></i>    @TempData["Error"]
                </div>
            }
            <form method="post" action="/usuario/entrar">
                <div class="form-group m-3">
                    <input type="text"
                           name="login"
                           id="Usuario"
                           class="form-control"
                           placeholder="Usuário"
                           required />
                </div>
                <div class="form-group m-3">
                    <input type="password"
                           name="senha"
                           id="Usuario"
                           class="form-control"
                           placeholder="Senha"
                           required />
                </div>
                <button type="submit" class="btn btn-primary mt-0 m-3">
                    Entrar
                </button>
            </form>
            <a class="text-white text-center" href="/usuario/esqueci/">Esqueceu a senha?</a>
        </div>
    </div>
</main>