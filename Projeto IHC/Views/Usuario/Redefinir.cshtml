@{
    ViewData["Title"] = "Redefinir Senha";
}

@section Styles {
<link href="~/css/Entrar.css" rel="stylesheet" />
}

<main class="bg-dark">
    <div class="container">
        <div class="card-header d-flex justify-content-center align-items-center" id="card-header">
            <img src="/img/capital.svg" class="login-logo" />
        </div>
        <div class="card-body d-flex flex-column">
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger">
                    <i class="fa-solid fa-info"></i> @TempData["Error"]
                </div>
            }
            <form method="post" action="/usuario/redefinir">
                <div>
                    <p>Insira a Chave-Mestra para Continuar</p>
                </div>
                <div class="form-group m-3">
                    <input type="password" name="chave" id="chave" class="form-control" placeholder="Chave-Mestra"
                        required />
                </div>
                <div class="d-flex flex-column">
                    <button type="submit" class="btn btn-primary mt-0 m-3">
                        Enviar
                    </button>
                </div>
            </form>
        </div>
    </div>
</main>