@{
    string CurrentName = Convert.ToString(this.ViewContext.RouteData.Values["Controller"].ToString());
    switch (CurrentName)
    {
        case "Home":
            Layout = "~/Views/Shared/_HomeLayout.cshtml";
            break;
        case "Filme":
            Layout = "~/Views/Shared/_HomeLayout.cshtml";
            break;
        case "Usuario":
            Layout = "~/Views/Shared/_UsuarioLayout.cshtml";
            break;
        case "Admin":
            Layout = "~/Views/Shared/_AdminLayout.cshtml";
            break;
        default:
            break;
    }
}