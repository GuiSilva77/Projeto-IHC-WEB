        case "Home":
            Layout = "~/Views/Shared/_HomeLayout.cshtml";
            break;
        case "Filme":
            Layout = "~/Views/Shared/_HomeLayout.cshtml";
            break;
        case "Usuarios":
            Layout = "~/Views/Shared/_UsuariosLayout.cshtml";
            break;
        default:
            break;
    }
}